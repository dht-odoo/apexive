<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Category -->
    <record model="ir.module.category" id="module_category_job_card">
    	<field name="name">Workshop</field>
        <field name="description">Helps you manage your Workshop Services.</field>
        <field name="sequence">3</field>
    </record>

    <!-- Groups -->
    <record id="group_job_card_technician" model="res.groups">
        <field name="name">Mechanic User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="module_category_job_card"/>
    </record>

    <record id="group_fleet_sales_user" model="res.groups">
        <field name="name">Job Card Salesman</field>
        <field name="implied_ids" eval="[(4, ref('group_job_card_technician'))]"/>
        <field name="category_id" ref="module_category_job_card"/>
    </record>

    <record id="group_fleet_workshop_manager" model="res.groups">
        <field name="name">Workshop Manager</field>
        <field name="category_id" ref="module_category_job_card"/>
        <field name="implied_ids" eval="[(4, ref('group_fleet_sales_user'))]"/>
    </record>
</odoo>
