<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Paper Format -->
        <record id="fts_paperformat_letter_invoice" model="report.paperformat">
            <field name="name">Invoice Letter</field>
            <field name="default" eval="True" />
            <field name="format">Letter</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

        <record id="jobcard_paperformat_letter" model="report.paperformat">
            <field name="name">Job Card Letter</field>
            <field name="default" eval="True" />
            <field name="format">Letter</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

        <!-- Report Action  -->
        <record id="invoices_account" model="ir.actions.report">
            <field name="name">Invoices Report</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">garage_system.report_payments_invoice</field>
            <field name="report_file">garage_system.report_payments_invoice</field>
            <field name="print_report_name">(object._get_report_base_filename())</field>
            <field name="binding_model_id" ref="model_account_move"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="garage_system.fts_paperformat_letter_invoice"/>
        </record>

        <record id="job_card_action_report" model="ir.actions.report">
            <field name="name">Jobcard</field>
            <field name="model">job.card</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">garage_system.report_job_card</field>
            <field name="report_file">garage_system.report_job_card</field>
            <field name="print_report_name">'Vehicle Report'</field>
            <field name="binding_model_id" ref="garage_system.model_job_card"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="garage_system.jobcard_paperformat_letter"/>
        </record>
    </data>
</odoo>