<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inherits partner form view -->
        <record id="res_partner_view_form" model="ir.ui.view">
            <field name="name">res.partner.view.form.inherit.garage_system</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="vat" position="after">
                    <field name="first_contract_date"/>
                    <field name="code"/>
                    <field name="max_discount"/>
                    <field name="last_visit_date" />
                    <field name="last_services_jobcard_id"/>
                </field>
                <button name="action_view_sale_order" position="before">
                    <button type="object"
                            name="button_view_repair"
                            class="oe_stat_button"
                            icon="fa-pencil"
                            attrs="{'invisible': [('workshop_count', '=', 0)]}" groups="garage_system.group_job_card_technician">
                        <field name="workshop_count" widget="statinfo" string="Job Card"/>
                    </button>
                    <button type="object"
                            name="button_view_fleet"
                            class="oe_stat_button"
                            icon="fa-pencil"
                            attrs="{'invisible': [('vehicle_count', '=', 0)]}" groups="garage_system.group_job_card_technician">
                        <field name="vehicle_count" widget="statinfo" string="Vehicles"/>
                    </button>
                </button>
            </field>
        </record>
    </data>
</odoo>
