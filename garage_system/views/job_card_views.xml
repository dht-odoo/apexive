<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Job card form view -->
    <record id="job_card_view_form" model="ir.ui.view">
        <field name="name">job.card.view.form</field>
        <field name="model">job.card</field>
        <field name="arch" type="xml">
            <form string="Job Card">
                <header>
                    <button name="create_invoice" string="Create Invoice" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('state', 'in', ['draft', 'cancel']), ('invoice_created', '=', True)]}" groups="garage_system.group_fleet_sales_user"/>
                    <button t-if='product_parts_services_id' name="create_invoice" string="Create Invoice" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'in', ['draft', 'cancel', 'done'])]}" groups="garage_system.group_fleet_sales_user"/>
                    <button name="create_sale_order" string="Create Sale Order" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'in', ['draft','done','cancel'])]}" groups="garage_system.group_fleet_sales_user"/>
                    <button name="create_purchase_order" string="Create Purchase Order" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'in', ['draft','done','cancel'])]}" groups="garage_system.group_fleet_sales_user"/>
                    <button name="create_worksheet" string="Create Worksheet" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('state', 'in', ['draft','done','cancel']), ('worksheet_count', '=', 1)]}" groups="garage_system.group_job_card_technician"/>
                    <button name="action_confirm" string="Confirm Job Card" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'not in', ['draft'])]}" groups="garage_system.group_fleet_sales_user"/>
                    <button name="action_done" string="Finish" type="object" class="oe_highlight" states="worksheet_done" confirm="Are you sure you want to complete the Job Card?" attrs="{'invisible': [('state', 'in', ['draft','done','cancel'])]}" groups="garage_system.group_fleet_sales_user"/>
                    <button name="action_cancel" string="Cancel" type="object" states="worksheet_done" confirm="Are you sure you want to cancel the Job Card?" attrs="{'invisible': [('state', 'in', ['done', 'cancel'])]}" groups="garage_system.group_fleet_sales_user"/>
                    <button name="action_move_to_draft" string="Move to Draft" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'not in', ['cancel'])]}" groups="garage_system.group_fleet_sales_user"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet string="Job Card">
                    <div class="oe_button_box" name="button_box">
                        <button type="object"
                            name="button_view_worksheet"
                            class="oe_stat_button"
                            icon="fa-wrench"
                            attrs="{'invisible': [('worksheet_count', '=', 0)]}" groups="garage_system.group_job_card_technician">
                            <field name="worksheet_count" widget="statinfo" string="Work Sheet"/>
                        </button>
                        <button type="object"
                            name="button_view_saleorder"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o"
                            attrs="{'invisible': [('saleorder_count', '=', 0)]}" groups="garage_system.group_fleet_sales_user">
                            <field name="saleorder_count" widget="statinfo" string="Sales Orders"/>
                        </button>
                        <button type="object"
                            name="button_view_purchase_order"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o"
                            attrs="{'invisible': [('purchaseorder_count', '=', 0)]}" groups="garage_system.group_fleet_sales_user">
                            <field name="purchaseorder_count" widget="statinfo" string="Purchase Order"/>
                        </button> 
                        <button name="action_view_invoice" type="object" class="oe_stat_button"
                                icon="fa-usd" attrs="{'invisible': [('invoice_count', '=', 0)]}" groups="garage_system.group_fleet_sales_user">
                                <field name="invoice_count" widget="statinfo" string="Invoices"/>
                        </button>
                        <button name="action_view_vendor_bill" type="object" class="oe_stat_button"
                                icon="fa-usd" attrs="{'invisible': [('vendor_bill_count', '=', 0)]}" groups="garage_system.group_fleet_sales_user">
                                <field name="vendor_bill_count" widget="statinfo" string="Vendor Bill"/>
                        </button>
                    </div>              
                    <h1>
                        <field name="name" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </h1>
                    <group>
                        <group>
                            <field name="client_id"  context="{'show_address': 1}" options='{"always_reload": True}' attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="contact_name"/>
                            <field name="receipt_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="date_closed"/>
                            <field name="user_id"/>
                            <field name="vat"/>
                            <field name="first_contract_date"/>
                            <field name="mechanic_id"/>
                            <field name="worksheet_count" invisible="1"/>
                            <field name="invoice_created" invisible="1"/>
                            <field name="purchase_order_created" invisible="1"/>        
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="mobile"/>
                            <field name="email" widget="email"/>
                            <field name="priority" widget="priority"/>
                            <field name="total_cost" force_save="1" groups="garage_system.group_fleet_workshop_manager"/>
                            <field name="total_sale_price" force_save="1" groups="garage_system.group_fleet_sales_user"/>
                            <field name="fts_payment_type"/>
                        </group>
                    </group>                    
                    <notebook>
                        <page string="Vehicle Details">
                            <group>
                                <group>
                                    <field name="fleet_id" domain="[('customer_id', '=', client_id)]"  attrs="{'readonly': ['|', ('client_id', '=', False), ('state', '!=', 'draft')]}" context="{'default_customer_id': client_id}"/>
                                    <field name="license_plate"/>
                                    <field name="chassis_number"/>
                                    <field name="registration_number"/>
                                </group>
                                <group>
                                    <field name="model_id"/>
                                    <field name="fuel_type"/>
                                    <field name="last_odometer" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                </group>
                            </group>
                            <separator string="Notes"/>
                            <field name="comment"/>
                        </page>
                        <page string="Service Products">
                            <field name="product_parts_services_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="default_code"/>
                                    <field name="is_service" force_save="1"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                    <field name="standard_price"/>
                                    <field name="product_uom_category_id" invisible="1"/>
                                    <field name="price_unit"/>
                                    <field name="delivered_quantity" invisible="1"/>
                                    <field name="delivery_state" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Extra Consumable Products">
                            <field name="consumable_product_parts_services_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="default_code"/>
                                    <field name="is_service" readonly='True'/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                    <field name="product_uom_category_id" invisible="1"/>
                                    <field name="standard_price"/>
                                    <field name="delivered_quantity" invisible="1"/>
                                    <field name="delivery_state" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Job card tree view -->
    <record id="job_card_view_tree" model="ir.ui.view">
        <field name="name">job.card.view.tree</field>
        <field name="model">job.card</field>
        <field name="priority">4</field>
        <field name="arch" type="xml">
            <tree string="Job Card">
                <field name="name"/>
                <field name="client_id"/>
                <field name="fleet_id"/>
                <field name="license_plate"/>
                <field name="phone"/>
                <field name="receipt_date"/>
                <field name="user_id"/>
                <field name="mechanic_id"/>
                <field name="total_cost" force_save="1" groups="garage_system.group_fleet_workshop_manager"/>
                <field name="total_sale_price" force_save="1" groups="garage_system.group_fleet_sales_user"/>
                <field name="priority"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Job card search view-->
    <record id="job_card_view_search" model="ir.ui.view">
        <field name="name">job.card.view.search</field>
        <field name="model">job.card</field>
        <field name="arch" type="xml">
            <search string="Search Job Card">
                <field name="name"/>
                <field name="client_id" operator="child_of"/>
                <field name="user_id"/>
                <field name="fleet_id"/>
                <field name="mechanic_id"/>
                <field name="license_plate"/>
                <group expand="1" string="Group By">
                    <filter name="fts_payment_type" string="Payment Type" context="{'group_by':'fts_payment_type'}"/>
                </group>
                <separator/>
           </search>
        </field>
    </record>

    <!-- Job Card Pivot view -->
    <record id="job_card_view_pivot" model="ir.ui.view">
        <field name="name">job.card.view.pivot</field>
        <field name="model">job.card</field>
        <field name="arch" type="xml">
            <pivot string="Workshop Order">
                <field name="client_id" type="row"/>
                <field name="user_id" type="row"/>
                <field name="total_cost" type="measure"/>
                <field name="total_sale_price" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Job card action -->
    <record model="ir.actions.act_window" id="job_card_action">
        <field name="name">Job Card Action</field>
        <field name="res_model">job.card</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="search_view_id" ref="view_job_card_filter"/>
        <field name="view_id" ref="view_job_card_tree"/>
    </record>

    <!--Menuitems-->        
    <menuitem id="menu_base_job_card" name="Workshop" sequence="50" groups="garage_system.group_job_card_technician" web_icon="garage_system,static/icon.png"/>
    <menuitem name="Jobs" parent="garage_system.menu_base_job_card" id="menu_job_card" sequence="3" groups="garage_system.group_job_card_technician"/>
    <menuitem name="Job Cards" parent="menu_job_card" id="menu_job_card_submenu" sequence="1" action="job_card_action" groups="garage_system.group_job_card_technician"/>
</odoo>
