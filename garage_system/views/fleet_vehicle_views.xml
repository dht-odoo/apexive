<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inherits fleet vehicle form view -->
        <record id="fleet_vehicle_view_form" model="ir.ui.view">
            <field name="name">fleet.vehicle.view.form.inherit.garage_system</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <group>
                        <field name="customer_id"/>
                    </group>
                </xpath>
                <button name="open_assignation_logs" position="before">
                    <button type="object"
                            name="button_view_repair"
                            class="oe_stat_button"
                            icon="fa-pencil"
                            attrs="{'invisible': [('workshop_count', '=', 0)]}" groups="garage_system.group_fleet_sales_user">
                        <field name="workshop_count" widget="statinfo" string="Job Card"/>
                    </button>
                </button>
            </field>
        </record>
    </data>
</odoo>
