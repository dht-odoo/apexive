<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherited company form. -->
    <record id="res_company_view_form" model="ir.ui.view">
        <field name="name">res.company.view.form.inherit.documents_reminder</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <page name="general_info" position="after">
                <page string="Documents" name="company_documents">
                     <form>
                        <group>
                            <group>
                                <field name="total_documents" required="1"/>
                                <field name="total_allowed_documents"/>
                                <field name="total_partners"/>
                                <field name="total_allowed_partners"/>
                            </group>
                        </group>
                    </form>
                </page>
            </page>
        </field>
    </record>
</odoo>